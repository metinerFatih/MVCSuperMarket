@using MVCSuperMarket.Classes
@model UrunViewModel

<h1>Ürünü Düzenle</h1>
<form asp-controller="Urun" asp-action="Duzenle" method="post" enctype="multipart/form-data">
    <div class="mb-2">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" type="text" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Fiyat"></label>
        <input asp-for="Fiyat" class="form-control" type="text" />
        <span asp-validation-for="Fiyat" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Resim">Resim Ekleme</label>
        <input type="file" asp-for="Resim" class="form-control" />
    </div>
    <button class="btn btn-warning">Düzenle</button>
</form>
@using MVCSuperMarket.Classes
@model Urun

<h1>Ürünü Sil</h1>

<form asp-controller="Urun" asp-action="Sil" method="post">

    <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />

    <h3 class="text-warning">@Model.Ad (@Model.Fiyat.ToString("c0")) ürünü silinecek. Emin misiniz?</h3>

    <button class="btn btn-danger">Evet. Ürünü sil!</button>
    <a class="btn btn-secondary" asp-action="Index">Hayır. Geri dön!</a>
</form>